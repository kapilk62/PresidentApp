<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewGateKeeperFirstNamelistview"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="@color/lightblue"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewGateKeeperEmaillistview"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/textViewGateKeeperFirstNamelistview"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/textViewGateKeeperLastNamelistview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/lightblue"
        android:text="TextView"
        android:textStyle="bold"
        android:layout_marginStart="115dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/textViewGateKeeperMobileNumberlistview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@+id/textViewGateKeeperEmaillistview"
        android:layout_toEndOf="@+id/textViewGateKeeperEmaillistview"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"/>

</RelativeLayout>